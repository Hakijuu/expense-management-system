<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="40dp"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_gray">

        <TextView
            android:id="@+id/walletName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/label"
            android:textSize="36sp"
            android:text=" "
            android:textColor="@color/yellow" />

        <View
            android:id="@+id/vector"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/vector_2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/owner_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/label"
                android:textSize="24sp"
                android:text="@string/owner" />

            <TextView
                android:id="@+id/owner_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" "
                android:textAppearance="@style/label"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/number_of_members_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/label"
                android:textSize="24sp"
                android:text="@string/number_of_members" />

            <TextView
                android:id="@+id/number_of_members_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" "
                android:textAppearance="@style/label"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/balance_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/label"
                android:textSize="24sp"
                android:layout_weight="1"
                android:text="@string/balance" />

            <TextView
                android:id="@+id/balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/label"
                android:textSize="24sp"
                android:text=" "
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/goToWallet_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="@string/go_to_wallet"
            android:textAppearance="@style/button_style"
            android:textColor="@color/light_gray"
            app:backgroundTint="@null" />


</LinearLayout>
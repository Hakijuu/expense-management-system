<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_round_box_dark">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="@style/simple_label_bold"
                android:textSize="36sp"
                android:textColor="@color/yellow" />

            <View
                android:id="@+id/vector_1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/v_line_white" />

            <RadioGroup
                android:id="@+id/period_category_RG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_box_light"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_box_light"
                android:paddingVertical="15dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/preview_btn"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:background="@drawable/btn_list_opened">
                </Button>
                <TextView
                    android:id="@+id/select_period_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/yellow"
                    android:textSize="24sp">
                </TextView>
                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_list_opened_rotation">
                </Button>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:padding="20dp"
                android:background="@drawable/bg_round_box_light">

                <TextView
                    android:id="@+id/biggest_expense_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/simple_label_bold"
                    android:textSize="18sp"
                    android:text="@string/biggest_expense_label"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/biggest_expense_member_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/simple_label_bold"
                    android:textSize="18sp"
                    android:textColor="@color/light_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                android:padding="20dp"
                android:background="@drawable/bg_round_box_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_round_box_light">

                    <TextView
                        android:id="@+id/all_expenses_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/simple_label_bold"
                        android:textSize="18sp"
                        android:text="@string/all_expenses_label"
                        android:textColor="@color/light_gray" />

                    <TextView
                        android:id="@+id/all_expense_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/simple_label_bold"
                        android:textSize="18sp"
                        android:textColor="@color/light_gray" />
                </LinearLayout>

                <View
                    android:id="@+id/vector_2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/v_line_white" />



                <!-- DodaÄ‡ tutaj tabele kategoria: koszt PLN-->

            </LinearLayout>

            <Button
                android:id="@+id/back_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_simple"
                android:text="@string/back"
                android:textAppearance="@style/simple_button"
                android:textColor="@color/light_gray"
                app:backgroundTint="@null" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

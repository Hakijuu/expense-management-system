<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_round_box_light">

    <TextView
        android:id="@+id/name_expense_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="@style/simple_label_bold"
        android:textSize="36sp"
        android:textColor="@color/yellow" />

    <View
        android:id="@+id/vector_1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/v_line_gradient" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/who_make_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/simple_label"
            android:textSize="18sp"
            android:text="@string/who_make_label" />

        <TextView
            android:id="@+id/category_expanse_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/simple_label"
            android:textSize="18sp"
            android:text="@string/category_label" />

        <TextView
            android:id="@+id/cost_expense_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/simple_label"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="@string/cost_label" />

    </LinearLayout>

    <View
        android:id="@+id/vector_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/v_line_gradient" />

    <TextView
        android:id="@+id/go_to_expense_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/simple_label_bold"
        android:textSize="18sp"
        android:textColor="@color/light_gray"
        android:text="@string/see_details"/>


</LinearLayout>
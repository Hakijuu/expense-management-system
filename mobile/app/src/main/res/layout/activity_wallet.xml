<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/round_box">

            <TextView
                android:id="@+id/walletName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/label"
                android:textSize="36sp"
                android:text=" "
                android:textColor="@color/yellow" />

            <View
                android:id="@+id/vector_1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/vector_2" />

            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/label"
                android:textSize="20sp"
                android:text="@string/description" />

            <View
                android:id="@+id/vector_2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/vector_2" />

            <TextView
                android:id="@+id/owner_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/label"
                android:textSize="20sp"
                android:text="@string/owner" />

            <TextView
                android:id="@+id/number_of_members_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/label"
                android:textSize="20sp"
                android:text="@string/number_of_members" />

            <TextView
                android:id="@+id/saldo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:textAppearance="@style/label"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="@string/saldo" />

            <TextView
                android:id="@+id/expanses_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/label"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="@string/expanses" />

            <TextView
                android:id="@+id/your_expanses_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/label"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="@string/your_expanses" />

            <TextView
                android:id="@+id/balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/label"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="@string/balance" />

            <View
                android:id="@+id/vector_3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/vector_2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_box_button"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:text="@string/open_chat_button"
                android:textAllCaps="false"
                android:textColor="@color/yellow"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_box_button"
                android:paddingVertical="15dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp">
                <Button
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_add">
                </Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/yellow"
                    android:text="@string/members"
                    android:textSize="24sp">
                </TextView>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_list_close">
                </Button>

            </LinearLayout>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView"
                android:name="com.example.mobile.MembersFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_box_button"
                android:paddingVertical="15dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp">
                <Button
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_add">
                </Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/yellow"
                    android:text="@string/expenses"
                    android:textSize="24sp">
                </TextView>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_list_close">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_box_button"
                android:paddingVertical="15dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp">
                <Button
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_add">
                </Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/yellow"
                    android:text="@string/shop_lists"
                    android:textSize="24sp">
                </TextView>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_list_close">
                </Button>
            </LinearLayout>

            <Button
                android:id="@+id/statistics_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button"
                android:text="@string/statistics"
                android:textAppearance="@style/button_style"
                android:textColor="@color/light_gray"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/deleteWallet_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_danger"
                android:text="@string/deleteWallet"
                android:textAppearance="@style/button_style"
                android:textColor="@color/light_gray"
                app:backgroundTint="@null" />

        </LinearLayout>
        </LinearLayout>
</ScrollView>
